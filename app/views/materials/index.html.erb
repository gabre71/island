<table class="table table-striped">
  <thead>
  <legend>Listing materials</legend>
  <tr>
    <th>Name</th>
    <th>Material group</th>
    <th>Material type</th>
    <th>Quantity</th>
    <th>Unit</th>
    <th></th>
  </tr>
  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= material.name %></td>
        <td><%= material.material_group.name %></td>
        <td><%= material.material_type.name %></td>
        <td><%= material.quantity %></td>
        <td><%= material.unit.name %></td>
        <td><%= link_to 'Edit', edit_material_path(material), :class=>"btn btn-mini btn-primary" %>
            <%= link_to 'Destroy', material, method: :delete, data: { confirm: 'Are you sure?'}, :class =>"btn btn-mini btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
  <tfoot>
    <tr>
      <td colspan = 6>
        <%= link_to 'New Material', new_material_path, :class=>"btn btn-mini btn-primary" %>
      </td>
    </tr>
  </tfoot>
</table>
