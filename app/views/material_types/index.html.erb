<table class="table table-striped">
  <thead>
  <legend>Listing material_types</legend>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>
  <tbody>
    <% @material_types.each do |material_type| %>
      <tr>
        <td><%= material_type.name %></td>
        <td><%= link_to 'Edit', edit_material_type_path(material_type), :class=> "btn btn-mini btn-primary" %>
            <%= link_to 'Destroy', material_type, method: :delete, data: { confirm: 'Are you sure?' }, :class=> "btn btn-mini btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
<tfoot>
  <tr>
    <td colspan = 2>
      <%= link_to 'New Material type', new_material_type_path, :class=>"btn btn-mini btn-primary" %>
    </td>
  </tr>
</tfoot>
</table>



